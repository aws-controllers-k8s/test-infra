  aws-controllers-k8s/pkg:
  - name: unit-test
    decorate: true
    optional: false
    always_run: true
    annotations:
      karpenter.sh/do-not-evict: "true"
    spec:
      serviceAccountName: pre-submit-service-account
      containers:
      - image: {{ image_context.images["unit-test"] }}
        resources:
          limits:
            cpu: 1
          requests:
            cpu: 1
            memory: "500Mi"
        command: ["make", "test"]

