{% for service in aws_services  %}
  aws-controllers-k8s/{{ service }}-controller:
  - name: {{ service }}-pre-submit
    decorate: true
    labels:
      preset-dind-enabled: "true"
      preset-kind-volume-mounts: "true"
    extra_refs:
    - org: aws-controllers-k8s
      repo: community
      base_ref: main
      workdir: true
    - org: aws-controllers-k8s
      repo: test-infra
      base_ref: main
      workdir: false
    spec:
      serviceAccountName: pre-submit-service-account
      containers:
      - image: public.ecr.aws/aws-controllers-k8s/prow:prow-test-0.0.2
        securityContext:
          privileged: true
        env:
        - name: SERVICE
          value: {{ service }}
        command: ["wrapper.sh", "bash", "-c", "make kind-test SERVICE=$SERVICE"]

{% endfor %}